{
  "extends": ["plugin:prettier/recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "semi": [2, "never"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "quotes": [2, "single", "avoid-escape"],
    "eslint-disable-next-line": "off"
  }
}
